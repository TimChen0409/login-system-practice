<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/header") %>
    <title>Profile Page</title>
  </head>
  <body>
    <%- include ("partials/nav") %>
    <section class="user-info">
      <div class="d-flex align-items-center">
        <% if (user.thumbnail) { %>
        <img
          class="d-block rounded-circle p-3"
          src="<%= user.thumbnail %>"
          alt="personal image"
        />
        <% } %>
        <h1 class="p-2"><%= user.name %>'s Profile Page</h1>
      </div>
      <ul>
        <li>Google ID： <%= user.googleID %></li>
        <li>Sign in time：<%= user.date %></li>
      </ul>
    </section>

    <section class="d-flex p-4">
      <% for (let i = 0; i < posts.length; i++) { %>
      <div class="card p-1 m-1 w-25">
        <div class="card-body">
          <h5 class="card-title"><%= posts[i].title %></h5>
          <p class="card-text"><%- posts[i].content %></p>
          <a href="#" class="btn btn-dark"><%= posts[i].date %> </a>
        </div>
      </div>
      <% } %>
    </section>
  </body>
</html>
